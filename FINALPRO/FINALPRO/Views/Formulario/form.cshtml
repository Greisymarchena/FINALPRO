@model FINALPRO.Models.Formulario

@{
    ViewBag.Title = "form";
}



@using (Html.BeginForm("mostrar","formulario", null, FormMethod.Post, new { enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    
